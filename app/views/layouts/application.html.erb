<!DOCTYPE html>
<html>
<head>
  <title>RefactorTest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='container'>
    <% if current_user.present? %>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Stories time</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li><a href="<%= stories_path %>">All stories</a></li>
              <li><a href="<%= user_stories_path(current_user.id) %>">My stories</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Stories by category <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to "Pets", category_stories_path(Category.find_by(title: 'Pets').id) %></li>
                  <li><%= link_to "Sport", category_stories_path(Category.find_by(title: 'Sport').id) %></li>
                </ul>
              </li>
              <li><p class='navbar-btn'>
                 <a class='btn btn-success' href="<%= new_story_path %>">I have new story! </a></p>
               </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><p class='navbar-text'><%= current_user.email %></p></li>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>
    <% end %>
    <%= yield %>
  </div>

</body>
</html>
